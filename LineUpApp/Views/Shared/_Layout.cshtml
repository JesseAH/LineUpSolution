<body>

    <header id="header">
        <div class="navbar navbar-inverse" role="banner">
            <div class="container">
                <div class="navbar-header">
                    <a asp-controller="Home" asp-action="Index" class="btn-bracketed">
                        <h1><i class="fa fa-trophy" aria-hidden="true"></i> LineUp <b><font color="#0177C0">ADMINISTRATION</font></b></h1>
                    </a>

                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">

                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Admin"))
                            {
                            <li class="dropdown">
                                <a href="#">DB Objects<i class="fa fa-angle-down"></i></a>
                                <ul role="menu" class="sub-menu">
                                    <li>@Html.ActionLink("User", "Index", "User")</li>
                                    <li>@Html.ActionLink("Game_Type", "Index", "Game_Type")</li>
                                    <li>@Html.ActionLink("League", "Index", "League")</li>
                                    <li>@Html.ActionLink("League_Team", "Index", "League_Team")</li>
                                    <li>@Html.ActionLink("Team", "Index", "Team")</li>
                                    <li>@Html.ActionLink("Round", "Index", "Round")</li>
                                    <li>@Html.ActionLink("Match", "Index", "Match")</li>
                                    <li>@Html.ActionLink("Match_Type", "Index", "Match_Type")</li>
                                    <li>@Html.ActionLink("Pick", "Index", "Pick")</li>
                                </ul>
                            </li>
                            }
                            <li><a href="https://lineup-functions.scm.azurewebsites.net/azurejobs/#/functions">Web Jobs</a></li>
                            <li>@Html.ActionLink("Log Off", "LogOff", "Account")</li>

                        }
                        else
                        {
                            <li>@Html.ActionLink("Login", "Login", "Account")</li>
                        }

                    </ul>
                </div>
            </div>
        </div>
    </header>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - LineUp ASP.NET Application</p>
        </footer>
    </div>

    <script type="text/javascript" src="~/js/jquery.js"></script>
    <script type="text/javascript" src="~/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/js/lightbox.min.js"></script>
    <script type="text/javascript" src="~/js/wow.min.js"></script>
    <script type="text/javascript" src="~/js/main.js"></script>  

    @RenderSection("scripts", required: false)
</body>
</html>
