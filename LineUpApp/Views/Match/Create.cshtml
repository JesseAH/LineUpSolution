            </div>
        </div>

        <div class="form-group">
            <text class="control-label col-md-2">Round</text>
            <div class="col-md-10">
                @Html.DropDownList("round_id", (IEnumerable<SelectListItem>)ViewData["Menu"], string.Empty, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.round_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <text class="control-label col-md-2">Team 1</text>
            <div class="col-md-10">
                @Html.DropDownList("team1_id", (IEnumerable<SelectListItem>)ViewData["Menu"], string.Empty, htmlAttributes: new { @class = "form-control" })
